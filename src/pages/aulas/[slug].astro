    <script define:vars={{ streamUrl, slug, eventId, locationData }}>
        (function () {
            console.log("Video Player Script - streamUrl:", streamUrl);
            console.log("Video Player Script - slug:", slug);

            const container = document.getElementById("video-container");
            const teaserVideo = document.getElementById("teaser-video");
            const playOverlay = document.getElementById("play-overlay");
            const playButton = document.getElementById("play-button");
            const streamPlayer = document.getElementById("stream-player");

            if (
                !container ||
                !teaserVideo ||
                !playOverlay ||
                !playButton ||
                !streamPlayer
            ) {
                console.error("Video player elements not found");
                return;
            }

            // Check if streamUrl is valid
            if (
                !streamUrl ||
                streamUrl.includes("YOUR_CODE") ||
                streamUrl.includes("YOUR_VIDEO_UID")
            ) {
                console.warn(
                    "Cloudflare Stream configuration not set. Please configure CLOUDFLARE_STREAM_CUSTOMER_CODE and CLOUDFLARE_STREAM_VIDEO_UID",
                );
                console.warn("Current streamUrl:", streamUrl);
                return; // Don't proceed if URL is invalid
            }

            let preloadIframe = null;
            let isPlaying = false;
            let videoDuration = 0;

            // Preload the Stream player in the background (without autoplay)
            if (
                streamUrl &&
                !streamUrl.includes("YOUR_CODE") &&
                !streamUrl.includes("YOUR_VIDEO_UID")
            ) {
                preloadIframe = document.createElement("iframe");
                preloadIframe.src = `${streamUrl}?preload=auto&muted=true`;
                preloadIframe.style.display = "none";
                preloadIframe.style.width = "0";
                preloadIframe.style.height = "0";
                preloadIframe.style.position = "absolute";
                preloadIframe.style.opacity = "0";
                preloadIframe.style.pointerEvents = "none";
                document.body.appendChild(preloadIframe);
            }

            const customOverlay = document.getElementById("custom-overlay");

            // Function to send video progress event to Meta
            async function sendVideoProgressEvent(value, type = "percent") {
                // type can be "percent" or "time"
                const isTimeBased = type === "time";
                const isPercentBased = type === "percent";

                try {
                    // Get the current page URL (where user is watching)
                    const pageUrl = window.location.href;

                    const response = await fetch("/api/video-progress", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify({
                            slug: slug || "unknown",
                            progress: isPercentBased ? value : null, // percent (25, 50, 75, 90)
                            watchTime: isTimeBased ? value : null, // seconds (actual video playback time)
                            eventType: type,
                            eventId: `${eventId}_${type}_${value}`,
                            locationData: locationData || {},
                            pageUrl: pageUrl, // Pass the actual page URL
                        }),
                    });

                    if (!response.ok) {
                        console.error("Failed to send video progress event");
                    } else {
                        console.log(
                            `Video progress event sent: ${type} = ${value}`,
                        );
                    }
                } catch (error) {
                    console.error("Error sending video progress event:", error);
                }
            }

            // Function to track video progress (time-based and percentage-based using actual video playback time)
            let videoStartTime = null;
            let estimatedDuration = 0; // Will be updated when we get duration info
            let progressCheckInterval = null;
            let watchedTimeMilestones = new Set(); // Track which time milestones have been sent
            let watchedPercentMilestones = new Set(); // Track which percentage milestones have been sent
            let lastKnownVideoTime = 0; // Track actual video playback time

            function checkTimeMilestones(videoPlaybackSeconds) {
                // Track 5 minutes (300 seconds) of actual video playback time
                const timeMilestones = [300]; // 5 minutes in seconds

                for (const milestoneSeconds of timeMilestones) {
                    if (
                        videoPlaybackSeconds >= milestoneSeconds &&
                        !watchedTimeMilestones.has(milestoneSeconds)
                    ) {
                        console.log(
                            `ðŸŽ¯ Time milestone reached: ${milestoneSeconds}s (${Math.floor(milestoneSeconds / 60)} minutes)`,
                        );
                        sendVideoProgressEvent(milestoneSeconds, "time");
                        watchedTimeMilestones.add(milestoneSeconds);
                    }
                }
            }

            function checkPercentMilestones(
                videoPlaybackSeconds,
                videoDuration,
            ) {
                // Track percentage milestones: 25%, 50%, 75%, 90%
                if (videoDuration > 0) {
                    const percent = Math.floor(
                        (videoPlaybackSeconds / videoDuration) * 100,
                    );
                    const percentMilestones = [25, 50, 75, 90];

                    for (const milestonePercent of percentMilestones) {
                        if (
                            percent >= milestonePercent &&
                            !watchedPercentMilestones.has(milestonePercent)
                        ) {
                            console.log(
                                `ðŸŽ¯ Percentage milestone reached: ${milestonePercent}% (${videoPlaybackSeconds}s / ${videoDuration}s)`,
                            );
                            sendVideoProgressEvent(milestonePercent, "percent");
                            watchedPercentMilestones.add(milestonePercent);
                        }
                    }
                }
            }

            function setupVideoProgressTracking() {
                videoStartTime = Date.now();
                console.log(
                    "Video progress tracking started at:",
                    new Date(videoStartTime).toISOString(),
                );

                // Listen for messages from Cloudflare Stream iframe
                const messageHandler = (event) => {
                    // Only process messages from Cloudflare Stream
                    if (event.origin.includes("cloudflarestream.com")) {
                        if (event.data && typeof event.data === "object") {
                            // Handle propertyChange messages with currentTime
                            if (
                                event.data.__privateUnstableMessageType ===
                                    "propertyChange" &&
                                event.data.property === "currentTime"
                            ) {
                                const videoPlaybackSeconds = Math.floor(
                                    event.data.value,
                                );
                                lastKnownVideoTime = videoPlaybackSeconds;
                                console.log(
                                    "ðŸ“¹ Video playback time:",
                                    videoPlaybackSeconds,
                                    "s (",
                                    Math.floor(videoPlaybackSeconds / 60),
                                    "m",
                                    videoPlaybackSeconds % 60,
                                    "s)",
                                    estimatedDuration > 0
                                        ? `- ${Math.floor((videoPlaybackSeconds / estimatedDuration) * 100)}%`
                                        : "",
                                );
                                // Check both time and percentage milestones
                                checkTimeMilestones(videoPlaybackSeconds);
                                if (estimatedDuration > 0) {
                                    checkPercentMilestones(
                                        videoPlaybackSeconds,
                                        estimatedDuration,
                                    );
                                }
                            }

                            // Handle timeupdate events (also contains currentTime info)
                            if (
                                event.data.__privateUnstableMessageType ===
                                    "event" &&
                                event.data.eventName === "timeupdate"
                            ) {
                                // timeupdate events indicate the video is playing
                                // We'll use the last known currentTime
                                if (lastKnownVideoTime > 0) {
                                    checkTimeMilestones(lastKnownVideoTime);
                                }
                            }

                            // Check for duration info
                            if (
                                event.data.duration ||
                                (event.data.__privateUnstableMessageType ===
                                    "propertyChange" &&
                                    event.data.property === "duration")
                            ) {
                                const duration =
                                    event.data.duration || event.data.value;
                                if (duration && duration > 0) {
                                    estimatedDuration = duration;
                                    console.log(
                                        "Video duration detected:",
                                        estimatedDuration,
                                        "seconds (",
                                        Math.floor(estimatedDuration / 60),
                                        "m",
                                        estimatedDuration % 60,
                                        "s)",
                                    );
                                    // Re-check percentage milestones now that we have duration
                                    if (lastKnownVideoTime > 0) {
                                        checkPercentMilestones(
                                            lastKnownVideoTime,
                                            estimatedDuration,
                                        );
                                    }
                                }
                            }

                            // Legacy support: direct currentTime property
                            if (
                                event.data.currentTime !== undefined &&
                                !event.data.__privateUnstableMessageType
                            ) {
                                const videoPlaybackSeconds = Math.floor(
                                    event.data.currentTime,
                                );
                                lastKnownVideoTime = videoPlaybackSeconds;
                                checkTimeMilestones(videoPlaybackSeconds);
                            }
                        }
                    }
                };

                window.addEventListener("message", messageHandler);

                // Fallback: Check milestones using last known video time
                // This ensures we catch milestones even if messages are missed
                progressCheckInterval = window.setInterval(() => {
                    if (lastKnownVideoTime > 0) {
                        // Use the actual video playback time from Cloudflare Stream messages
                        checkTimeMilestones(lastKnownVideoTime);
                        // Also check percentage milestones if we have duration
                        if (estimatedDuration > 0) {
                            checkPercentMilestones(
                                lastKnownVideoTime,
                                estimatedDuration,
                            );
                        }
                    } else {
                        // If we haven't received any video time yet, log elapsed time for debugging
                        const elapsed = (Date.now() - videoStartTime) / 1000;
                        console.log(
                            `â±ï¸ Waiting for video time... Elapsed: ${Math.floor(elapsed)}s`,
                        );
                    }
                }, 10000); // Check every 10 seconds

                // Store cleanup function
                window._videoProgressCleanup = () => {
                    window.removeEventListener("message", messageHandler);
                    if (progressCheckInterval) {
                        clearInterval(progressCheckInterval);
                        progressCheckInterval = null;
                    }
                };
            }

            function playStream() {
                if (isPlaying) return;
                isPlaying = true;

                // Hide teaser and overlay
                teaserVideo.style.display = "none";
                playOverlay.style.display = "none";

                // Show and play the Stream player
                streamPlayer.classList.remove("hidden");
                streamPlayer.src = `${streamUrl}`;

                // Setup progress tracking when iframe loads
                streamPlayer.addEventListener("load", () => {
                    console.log("Stream player iframe loaded");
                    setTimeout(() => {
                        setupVideoProgressTracking();
                    }, 1000); // Wait a bit for video to start
                });

                // Also setup tracking after a delay as fallback
                setTimeout(() => {
                    if (!videoStartTime) {
                        console.log("Setting up video tracking (fallback)");
                        setupVideoProgressTracking();
                    }
                }, 3000);

                // Show custom SVG overlay
                if (customOverlay) {
                    setTimeout(() => {
                        customOverlay.classList.add("active");
                        setTimeout(() => {
                            customOverlay.classList.remove("active");
                        }, 3000);
                    }, 100);
                }

                // Remove preload iframe after a delay
                if (preloadIframe) {
                    setTimeout(() => {
                        if (preloadIframe && preloadIframe.parentNode) {
                            preloadIframe.parentNode.removeChild(preloadIframe);
                            preloadIframe = null;
                        }
                    }, 2000);
                }
            }

            // Click handlers
            playButton.addEventListener("click", (e) => {
                e.stopPropagation();
                playStream();
            });
            playOverlay.addEventListener("click", playStream);

            // Keyboard support
            playButton.addEventListener("keydown", (e) => {
                if (e.key === "Enter" || e.key === " ") {
                    e.preventDefault();
                    playStream();
                }
            });

            // Handle teaser video errors
            teaserVideo.addEventListener("error", (e) => {
                console.warn(
                    "Teaser video failed to load. Make sure /teaser-video.mp4 exists in the public folder.",
                );
            });
        })();
    </script>

