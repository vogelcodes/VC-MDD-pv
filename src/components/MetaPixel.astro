---
const pixelIds = (import.meta.env.META_PIXEL_ID ?? "")
  .split(",")
  .map((id: string) => id.trim())
  .filter(Boolean) as string[];
// Sanitize to digits only to avoid accidental injection/misparse by extensions
const safePixelIds: string[] = pixelIds
  .map((id: string) => id.replace(/\D/g, ""))
  .filter(Boolean);

const noscriptHtml: string = safePixelIds
  .map(
    (id: string) =>
      `<img src="https://www.facebook.com/tr?id=${id}&ev=PageView&noscript=1" height="1" width="1" style="display:none" />`
  )
  .join("");
---

<script is:inline data-pixels={JSON.stringify(safePixelIds)}>
  (function (f, b, e, v, n, t, s) {
    if (f.fbq) return;
    n = f.fbq = function () {
      n.callMethod ? n.callMethod.apply(n, arguments) : n.queue.push(arguments);
    };
    if (!f._fbq) f._fbq = n;
    n.push = n;
    n.loaded = !0;
    n.version = "2.0";
    n.queue = [];
    t = b.createElement(e);
    t.async = !0;
    t.src = v;
    s = b.getElementsByTagName(e)[0];
    s.parentNode.insertBefore(t, s);
  })(
    window,
    document,
    "script",
    "https://connect.facebook.net/en_US/fbevents.js"
  );

  function getCookie(name) {
    var match = document.cookie.match(new RegExp("(^|; )" + name + "=([^;]*)"));
    return match ? decodeURIComponent(match[2]) : null;
  }

  var pixelsAttr =
    (document.currentScript &&
      document.currentScript.getAttribute("data-pixels")) ||
    "[]";
  var __pixelIds = [];
  try {
    __pixelIds = JSON.parse(pixelsAttr) || [];
  } catch (e) {
    __pixelIds = [];
  }

  if (!window.__fbqInitedIds) {
    window.__fbqInitedIds = {};
  }
  for (var i = 0; i < __pixelIds.length; i++) {
    var pid = __pixelIds[i];
    if (pid && !window.__fbqInitedIds[pid]) {
      window.__fbqInitedIds[pid] = true;
      fbq("init", pid, { fbc: getCookie("_fbc"), fbp: getCookie("_fbp") });
    }
  }

  var getEventId = function () {
    var row = (document.cookie || "").split("; ").find(function (r) {
      return r.indexOf("event_id=") === 0;
    });
    return row ? row.split("=")[1] : undefined;
  };

  window.fbqTrack = function (event, data) {
    if (data === void 0) {
      data = {};
    }
    var eventId = getEventId();
    // Track to all initialized pixels at once
    fbq("track", event, data, { eventID: eventId });
  };
  if (!window.__fbqPageViewSent) {
    window.__fbqPageViewSent = true;
    window.fbqTrack("PageView");
  }
</script>
<noscript set:html={noscriptHtml} />
