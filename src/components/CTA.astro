---
import Image from "astro/components/Image.astro";

interface Props {
  ctaOption?: string;
  price?: boolean;
  label?: string;
  installments?: string;
  total?: string;
  installmentValue?: string;
};
const { ctaOption, price = false , label ="Quero aumentar minha produção de leite", installments = "12", total = "297", installmentValue = "30,72" } = Astro.props;
import telegram2 from "../assets/img/telegram-2.svg";

---
    <div class="flex w-full flex-col items-center rounded-sm bg-cream text-blue">
      <div class="mt-5 w-full text-center">
        {/* <a href="https://instagram.com/carolina.procaci"> */}
        {/* <a href="https://pay.hotmart.com/O84147403X"> */}

        {/* </a> */}

        {/* </a> */}
        <button
          id={ctaOption}
          class="text-white my-2 max-w-[250px] rounded-lg border-b-4 border-b-[#255a16] bg-[#07a71c] px-4 py-3 text-[13.6px] font-extrabold uppercase text-cream hover:scale-[104%] hover:border-b-[#44972d] hover:bg-[#236C0F] lg:max-w-md lg:py-5 lg:text-[22.6px]"
        >
          {label}
        </button>
        <div class="">
          <img
            class="mx-auto h-10 px-4"
            alt="Meios de Pagamento"
            src="/pagamentos2.svg"
            width={529}
            height={30}
          ></img>
        </div>
      </div>
      {price ? (
        <p class="pt-4">
          {installments}x
          <span class="mb-[14.4px] ml-1 mt-6 text-center text-[25px] font-extrabold uppercase lg:text-[31.25px]">
            R${installmentValue}
          </span>{" "}
          <br /> ou R${total} à vista
        </p>
      ) : (
        <></>
      )}
      <div class="m-4 grid w-full max-w-sm grid-cols-3 px-4 lg:max-w-3xl">
        <div class="flex flex-col items-center">
          <img
            alt="acesso-imediato"
            height={58.6}
            width={58.6}
            src={"/calendario2.svg"}
          ></img>
          <p class="text-center text-[9.79px] font-bold lg:text-[20.6px]">
            2 ANOS <br> de acesso
          </p>
        </div>
        <div class="flex flex-col items-center">
          <Image
            alt="telegram"
            width={58.6}
            src={telegram2}
            height={58.6}
          />
          <p class="text-center text-[9.79px] font-bold lg:text-[20.6px]">
            Suporte TODOS <br> os DIAS
          </p>
        </div>
        <div class="flex flex-col items-center">
          <img
            alt="garantia"
            width={44}
            src={"/garantia2.svg"}
            height={58.6}
          ></img>
          <p class="text-center text-[9.79px] font-bold lg:text-[20.6px]">
            Garantia de <br>21 DIAS
          </p>
        </div>
      </div>
    </div>

